<Page x:Class="school_unity.EditMarks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:school_unity"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1300"
      Title="EditMarks">

    <StackPanel>
        <ComboBox x:Name="Class"/>
        <ComboBox x:Name="Student"/>
        <DataGrid x:Name="Marks" Height="500" Loaded="Marks_Loaded" AutoGenerateColumns="False" ItemsSource="{Binding}">
                              
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Student.StudentName}"  IsReadOnly="True" Header="Имя" Width="*" />
                    <DataGridTextColumn Binding="{Binding Student.StudentSurname}" IsReadOnly="True" Header="Фамилия" Width="*"/>
                    <DataGridTextColumn Binding="{Binding MarkManagement.Year}"  Header="Год" Width="*"/>
                    <DataGridTextColumn Binding="{Binding MarkManagement.Class}"  Header="Класс" Width="*"/>
                    <DataGridTextColumn Binding="{Binding Subject.SubjectName}" IsReadOnly="True" Header="Предмет" Width="*"/>
                    <DataGridTextColumn Binding="{Binding MarkManagement.FirstMark}"  Header="1/4" Width="0.5*"/>
                    <DataGridTextColumn Binding="{Binding MarkManagement.SecondMark}"  Header="2/4" Width="0.5*"/>
                    <DataGridTextColumn Binding="{Binding MarkManagement.ThirdMark}"  Header="3/4" Width="0.5*"/>
                    <DataGridTextColumn Binding="{Binding MarkManagement.FourthMark}"  Header="4/4" Width="0.5*"/>
                    <DataGridTextColumn Binding="{Binding MarkManagement.ExamMark}"  Header="Экзамен" Width="*"/>
                    <DataGridTextColumn Binding="{Binding MarkManagement.YearMark}"  Header="Итоговая" Width="*"/>
            </DataGrid.Columns>
            
        </DataGrid>
        <Button x:Name="Update" Content="Обновить"  Height="25"/>
        <Button x:Name="Back" Content="Назад"  Height="25"/>

    </StackPanel>
</Page>
