<Page x:Class="school_unity.ChangePassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:school_unity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePassword">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="Login" Height="23" TextWrapping="Wrap" Text="Логин"/>
        <TextBox x:Name="OldPas" Height="23" TextWrapping="Wrap" Text="Старый Пароль"/>
        <TextBox x:Name="NewPas" Height="23" TextWrapping="Wrap" Text="Новый Пароль"/>
        <TextBox x:Name="Repeat" Height="23" TextWrapping="Wrap" Text="Повторите Новый Пароль"/>
        <Button Content="Сохранить" Width="200" Height="50" Click="Button_Click" Background="White"/>

    </StackPanel>
</Page>
